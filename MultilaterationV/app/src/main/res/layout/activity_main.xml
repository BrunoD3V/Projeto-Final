<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.projeto_final.multilateration.MainActivity">

    <TextView
        android:id="@+id/mainText"
        android:layout_width="373dp"
        android:layout_height="246dp"
        android:layout_marginLeft="7dp"
        android:text="AP"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edtD4" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="185dp"
        android:layout_height="58dp"
        android:text="Update"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="445dp"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edtX"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="X"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/edtD1"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edtY"
        android:layout_width="187dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Y"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/edtD2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.976"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/edtX"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/edtD1"
        android:layout_width="182dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="D1"
        android:inputType="numberDecimal"
        android:layout_marginTop="101dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edtD2"
        android:layout_width="187dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="D2"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="101dp"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/edtD1"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/edtD3"
        android:layout_width="182dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="D3"
        android:inputType="numberDecimal"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtD4"
        android:layout_width="187dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="D4"
        android:inputType="numberDecimal"
        android:layout_marginTop="145dp"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/edtD3"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/edtPos"
        android:layout_width="186dp"
        android:layout_height="43dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="Position"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStoreDB"
        android:layout_width="185dp"
        android:layout_height="59dp"
        android:text="Store in DB"
        android:layout_marginLeft="195dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="445dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="127dp"
        android:layout_height="38dp"
        android:text="Clear Fields"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        tools:layout_editor_absoluteX="249dp" />

</android.support.constraint.ConstraintLayout>
